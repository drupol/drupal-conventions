{
    "name": "drupol/drupal-conventions",
    "description": "Drupal conventions for coding.",
    "keywords": ["drupal", "coding style", "phpcs", "coding standard", "php-cs-fixer"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "homepage": "https://www.drupal.org/u/pol",
            "role": "Author"
        }
    ],
    "require": {
        "php": "^5.6",
        "drupal/coder": "^8.3.5",
        "drupol/php-conventions": "^1",
        "drupol/phpcsfixer-configs-drupal": "^1",
        "friendsofphp/php-cs-fixer": "^2.15",
        "jakub-onderka/php-parallel-lint": "^1",
        "phpro/grumphp": "^0.14",
        "sensiolabs/security-checker": "^4",
        "squizlabs/php_codesniffer": "^3",
        "symfony/yaml": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "drupol\\DrupalConventions\\": "./src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
