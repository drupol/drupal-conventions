{
    "name": "drupol/drupal-conventions",
    "description": "Drupal conventions for coding.",
    "keywords": ["drupal", "coding style", "phpcs", "coding standard", "php-cs-fixer"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "homepage": "https://www.drupal.org/u/pol",
            "role": "Author"
        }
    ],
    "require": {
        "php": ">= 5.6",
        "drupal/coder": "^8.3.5",
        "friendsofphp/php-cs-fixer": "~2.15",
        "jakub-onderka/php-parallel-lint": "~1",
        "phpro/grumphp": "~0.15 || ~0.12.1",
        "symfony/yaml": "^3.4 || ^4.2"
    },
    "suggest": {
        "symplify/coding-standard": "The LineLength fixer needs this library. Only PHP >= 7."
    },
    "autoload": {
        "psr-4": {
            "drupol\\DrupalConventions\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "drupol\\DrupalConventions\\Tests\\": "./tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "codeception/codeception": "^3.0"
    },
    "scripts": {
        "codecept": "./vendor/bin/codecept run"
    }
}
