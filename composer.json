{
    "name": "drupol/drupal-conventions",
    "type": "library",
    "description": "Drupal conventions for coding.",
    "keywords": [
        "drupal",
        "coding style",
        "phpcs",
        "coding standard",
        "php-cs-fixer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "homepage": "https://www.drupal.org/u/pol",
            "role": "Author"
        }
    ],
    "require": {
        "php": ">= 7.4",
        "drupal/coder": "^8.3.13",
        "drupol/php-conventions": "^5",
        "drupol/phpcsfixer-configs-drupal": "^2"
    },
    "suggest": {
        "symplify/coding-standard": "The LineLength fixer needs this library. Only PHP >= 7."
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "drupol\\DrupalConventions\\": "./src/"
        }
    }
}
