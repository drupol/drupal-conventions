{
    "name": "drupol/drupal-conventions",
    "type": "library",
    "description": "Drupal conventions for coding.",
    "keywords": [
        "drupal",
        "coding style",
        "phpcs",
        "coding standard",
        "php-cs-fixer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "homepage": "https://www.drupal.org/u/pol",
            "role": "Author"
        }
    ],
    "require": {
        "php": ">= 7.1.3",
        "drupal/coder": "^8.3.9",
        "drupol/php-conventions": "^1.7.1",
        "drupol/phpcsfixer-configs-drupal": "^1.0.8",
        "ergebnis/composer-normalize": "^2.3.2",
        "friendsofphp/php-cs-fixer": "^2.16.3",
        "php-parallel-lint/php-parallel-lint": "^1.1.0",
        "phpro/grumphp": "^0.16.1 || ^0.17.1 || ^0.18.0",
        "phpstan/extension-installer": "^1.0.3",
        "phpstan/phpstan": "^0.12.25",
        "phpstan/phpstan-deprecation-rules": "^0.12",
        "sensiolabs/security-checker": "^6",
        "squizlabs/php_codesniffer": "^3.5.5",
        "symfony/yaml": "^4.4 || ^5",
        "wearejust/grumphp-extra-tasks": "^2.2.1"
    },
    "suggest": {
        "symplify/coding-standard": "The LineLength fixer needs this library. Only PHP >= 7."
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "drupol\\DrupalConventions\\": "./src/"
        }
    }
}
