{
    "name": "drupol/drupal-conventions",
    "description": "Drupal conventions for coding.",
    "keywords": ["drupal", "coding style", "phpcs", "coding standard", "php-cs-fixer"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "homepage": "https://www.drupal.org/u/pol",
            "role": "Author"
        }
    ],
    "require": {
        "php": ">= 7.1.3",
        "drupal/coder": "^8.3.5",
        "drupol/php-conventions": "^1.6.3",
        "drupol/phpcsfixer-configs-drupal": "^1.0.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "jakub-onderka/php-parallel-lint": "^1",
        "localheinz/composer-normalize": "^1",
        "phpro/grumphp": "^0.16.1",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-deprecation-rules": "^0.11",
        "sensiolabs/security-checker": "^4",
        "squizlabs/php_codesniffer": "^3",
        "symfony/yaml": "^3.4 || ^4.3",
        "wearejust/grumphp-extra-tasks": "^2.2"
    },
    "suggest": {
        "symplify/coding-standard": "The LineLength fixer needs this library. Only PHP >= 7."
    },
    "autoload": {
        "psr-4": {
            "drupol\\DrupalConventions\\": "./src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
